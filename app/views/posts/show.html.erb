<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<h3>Comments</h3>

<%= form_for [@story, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render(partial: 'comments/comment', collection: @post.comments) %>
</ul>

<p id="notice"><%= notice %></p>

<% if @post.user == current_user %>
  <div class="btn-group">
    <%=link_to 'Back', posts_path(@post), class: "btn btn-default"%>
    <%=link_to 'Edit', edit_post_path(@post), class: "btn btn-default"%>
    <%=link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-default"%>
  </div>
<%end%>
